<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="dbcol.app.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="dbcol.app.Perspective"
            name="RCP Perspective"
            id="dbCol.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="dbCol"
            application="dbCol.application">
         <property
               name="windowImages"
               value="icons/eclipse16.png,icons/eclipse32.png,icons/eclipse48.png,icons/eclipse64.png, icons/eclipse128.png,icons/eclipse256.png">
         </property>
         <property
               name="appName"
               value="dbCol">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            id="dbcol.app"
            class="org.eclipse.ui.intro.config.CustomizableIntroPart">
      </intro>
      <introProductBinding
            introId="dbcol.app"
            productId="dbCol.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            id="dbCol.configId"
            introId="dbcol.app"
            content="introContent.xml">
         <presentation
               home-page-id="root">
            <implementation
                  os="win32,linux,macosx"
                  kind="html">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="dbcol.app.ui.DbCollection"
            id="dbcol.app.ui.dbCollection"
            name="DbCollect"
            restorable="true">
      </view>
      <view
            class="dbcol.app.ui.TableList"
            id="dbcol.app.ui.tableList"
            name="TableList"
            restorable="true">
      </view>
      <view
            class="dbcol.app.ui.TableData"
            id="dbcol.app.ui.tableData"
            name="TableData"
            restorable="true">
      </view>
   </extension>

</plugin>
